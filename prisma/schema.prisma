generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

// CMS

model Alert {
  id           String   @id @default(cuid()) @map("_id")
  title        String
  status       String
  content      String
  alwaysOn     Boolean
  dateStart    DateTime
  dateEnd      DateTime
  dateCreated  DateTime
  dateModified DateTime
}

model Page {
  id           String   @id @default(cuid()) @map("_id")
  title        String
  slug         String
  status       String
  metadesc     String
  content      String
  dateCreated  DateTime
  dateModified DateTime
}
